<div class = "show">
<h1>All the Shortlies</h1>

<table style="width: 100%">
  <tr>
    <th>Longly</th>
    <th>Shortly</th>
  </tr>


    <% @sites.each do |s| %>
      current = <%= "www.ortly.herokuapp.com/#{s.id}" %>
     <tr>
      <td><%= s.name[0,40] %>...</td>
      <td><a href=current>www.ortly.herokuapp.com/<%= s.id %></a></td>
     </tr>
    <% end %>

</table>
</div>
